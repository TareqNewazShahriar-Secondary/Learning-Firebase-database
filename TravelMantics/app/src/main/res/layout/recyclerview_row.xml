<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageViewImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/standard_margins"
        android:layout_marginStart="@dimen/standard_margins"
        android:layout_marginTop="@dimen/standard_margins"
        android:layout_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?android:attr/colorButtonNormal"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_margins"
        android:layout_marginStart="@dimen/standard_margins"
        android:layout_marginTop="@dimen/standard_margins"
        android:text="textView"
        app:layout_constraintStart_toEndOf="@+id/imageViewImg"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_margins"
        android:layout_marginStart="@dimen/standard_margins"
        android:layout_marginTop="@dimen/standard_margins"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageViewImg"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"/>

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_margins"
        android:layout_marginEnd="@dimen/standard_margins"
        android:layout_marginRight="@dimen/standard_margins"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</android.support.constraint.ConstraintLayout>
